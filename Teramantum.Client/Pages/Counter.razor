@page "/contador"
@rendermode InteractiveWebAssembly

<PageTitle>Contador</PageTitle>

<h1>Contador</h1>

<p role="status">Cuenta: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Da click</button>

@code {
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }
}
